#include <stdio.h>
#define max 1000

int main(){

    int n, i, count=0,count2=0;
    int a[max],b[max],c[max];

    scanf("%d",&n);

    for(i=0;i<n;i++){
        scanf("%d %d %d",&a[i],&b[i],&c[i]);
    }

    for(i=0;i<n;i++){

        if (a[i]==1&&b[i]==1&&c[i]==1||
            a[i]==1&&b[i]==1&&c[i]==0||
            a[i]==0&&b[i]==1&&c[i]==1||
            a[i]==1&&b[i]==0&&c[i]==1){
            count++;
        }
        else{
            continue;
        }

        }

printf("%d\n",count);



    return 0;
}
