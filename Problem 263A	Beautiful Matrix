#include <conio.h>
#include <iostream>

using namespace std;

int main(){
    int i,j,x,y;
    int a[5][5];

    for(i=0;i<5;i++){
        for(j=0;j<5;j++){
            cin>>a[i][j];
        }
    }

    for(i=0;i<5;i++){
        for(j=0;j<5;j++){
            if(a[i][j]==1){
                //cout<<"a["<<i<<"]"<<"["<<j<<"]";
                if(i>2){
                    x=i-2;
                }
                else if(i<2){
                    x=2-i;
                        }
                else if(i==2){
                    x=0;
                }
                if(j>2){
                    y=j-2;
                }
                else if(j<2){
                    y=2-j;
                        }
                else if(j==2){
                    y=0;
                }
                else{
                    continue;
                        }
    }
        }
    }
    //cout<<x<<" "<<y<<endl;
    cout<<x+y<<endl;


    return 0;
}
