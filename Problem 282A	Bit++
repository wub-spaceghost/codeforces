#include <conio.h>
#include <iostream>

using namespace std;

int main(){

    int n,num=0,i;
    string str;
    cin>>n;


    for(i=0;i<n;i++){
            cin>>str;
            if(str[0]=='+' || str[2]=='+'){
                num=num+1;
            }
            else if(str[0]=='-' || str[2]=='-'){
                num=num-1;
            }
            else {
                continue;
            }

    }

            cout<<num<<endl;


    return 0;
}
